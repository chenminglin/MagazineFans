<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_action1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_action1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_action1"
                android:layout_centerHorizontal="true"
                tools:text="aaaaa" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_action2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_action2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_action2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_action2"
                android:layout_centerHorizontal="true"
                tools:text="aaaaa" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_action3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_action3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_action3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_action3"
                android:layout_centerHorizontal="true"
                tools:text="aaaaa" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>